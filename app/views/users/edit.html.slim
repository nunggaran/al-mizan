	.section
		.container

			= form_for(@user) do |f|
				.row
					.col-md-6
						.form-group.label-floating.is-empty
							label.control-label First name
							= f.text_field :first_name, class: "form-control"
							span.material-input
					.col-md-6
						.form-group.label-floating.is-empty
							label.control-label First Name
							= f.text_field :first_name, class: "form-control"
					.col-md-6
						.form-group.label-floating.is-empty
							label.control-label With Floating Label
							input.form-control type="email" /
							span.material-input


					.col-md-6
						.input-group
							.form-group.is-empty
								label Last Name
								= f.text_field :last_name, class: "form-control"
								/ span.material-input

					.form-inputs

						= f.text_field :username, class: "form-control"
						= f.text_field :address, class: "form-control"
						= f.text_field :year_of_entry, class: "form-control"
						= f.text_field :year_graduated, class: "form-control"
						= f.text_field :handphone, class: "form-control"
						= f.text_field :ig, class: "form-control"
						= f.text_field :fb, class: "form-control"
						= f.text_field :twitter, class: "form-control"
						= f.text_field :faculty, class: "form-control"
						= f.text_field :university, class: "form-control"
						= f.text_field :job, class: "form-control"

				    / = f.input :password
				    / = f.input :password_confirmation
						= f.email_field :email

					.form-actions
						= f.button :submit
				- if @user.errors.any?
				  #error_explanation
				    = pluralize(@user.errors.count, "error")
				    ul
				      - @user.errors.full_messages.each do |message|
				        li = message