			.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
				.card.card-signup
					= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
						.header.header-primary.text-center
							h4.card-title Log in
							.social-line
								a.btn.btn-just-icon.btn-simple href="#pablo" 
									i.fa.fa-facebook-square
								a.btn.btn-just-icon.btn-simple href="#pablo" 
									i.fa.fa-twitter
								a.btn.btn-just-icon.btn-simple href="#pablo" 
									i.fa.fa-google-plus
						p.description.text-center Or Be Classical
						.card-content
							.input-group
								span.input-group-addon
									i.material-icons email
								.form-group.is-empty
									= f.input :email, required: false, autofocus: true, class: "form-control"
									span.material-input
							.input-group
								span.input-group-addon
									i.material-icons lock_outline
								.form-group.is-empty
									= f.input :password, required: false, class: "form-control"
									span.material-input
					  
							= f.button :submit, "Log in" 
          
