  .container
    .row.mt-50
      .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
        .card.card-signup
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            .header.header-primary.text-center
              h4.card-title Reset Password
            / p.description.text-center Reset 
            .card-content
              = devise_error_messages!
              .input-group
                span.input-group-addon
                  i.material-icons lock_outline
                .form-group.is-empty
                  = f.text_field :reset_password_token, hidden: true
                  = f.password_field :password, required: true, class: "form-control", placeholder: "New password"
                  span.material-input
              .input-group
                span.input-group-addon
                  i.material-icons lock
                .form-group.is-empty
                  = f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm your new password"
                  span.material-input
            
            .footer.text-center
              = f.submit "Reset Password", class: "btn btn-primary btn-round btn-lg"
              | &nbsp; &nbsp; &nbsp;
              = link_to "Register", new_user_registration_path, class: "btn btn-warning btn-simple btn-wd"
              = link_to "Reset password", new_password_path(resource_name), class: "btn btn-warning btn-simple btn-wd"
              / = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-warning btn-simple btn-wd"
              
