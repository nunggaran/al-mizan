.page-header.header-filter style=("background-image: url('https://res.cloudinary.com/muhammadyana/image/upload/v1512805549/al-mizan/background/10697211_817842171613923_342413348611805822_o.jpg'); background-size: cover; background-position: top center;") 
	.container
		.row.mt-50
			.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
				.card.card-signup
					= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
						.header.header-primary.text-center
							h4.card-title Reset Password
						p.description.text-center Enter your email to reset password, we'll sent password link reset
						.card-content
							.input-group
								span.input-group-addon
									i.material-icons email
								.form-group.is-empty
									= f.email_field :email,required: true, class: "form-control", placeholder: "Email"
									span.material-input
					  
						.footer.text-center
							= f.submit "Reset Password", class: "btn btn-primary btn-round btn-lg"
							| &nbsp; &nbsp; &nbsp;
							= link_to "Register", new_user_registration_path, class: "btn btn-warning btn-simple btn-wd"
							= link_to "Reset password", new_password_path(resource_name), class: "btn btn-warning btn-simple btn-wd"
							/ = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-warning btn-simple btn-wd"
							
							/ a.btn.btn-primary.btn-simple.btn-wd.btn-lg href="#pablo"  Get Started

