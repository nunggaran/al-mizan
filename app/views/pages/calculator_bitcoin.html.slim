        // delimiter: '.',
        // blocks: [5]
        numeral: true,
        numeralThousandsGroupStyle: 'thousand',
        numeralDecimalScale: 8
    });
    var cleave = new Cleave('.parsing', {
        
        numeral: true,
        numeralThousandsGroupStyle: 'thousand'
        //numeralDecimalScale: 8
    });
  });

  function calculateIDR(amount){
      var amountIDR = amount.replace(/\,/g,'');
      var priceBuy =  $("#priceBuy").val();
      var priceParsing = priceBuy.replace(/\./g, '');
      //console.log(priceParsing);
      var fix = 0;
      if (amountIDR >= 1000 && amountIDR <= 100000000000) {
          var totalBersih = parseFloat(amountIDR) / parseFloat(priceParsing);
          var fix = parseFloat(totalBersih).toFixed(8);
          //console.log(fix);
      }
      $('#hasil').val(fix + " BTC");
     
      //$('#hasil').find('input').val("tes");
      //document.getElementById('hasil').value =fix.toLocaleString();
  }
  function calculateBTC(amount){
      var amountBTC = amount.replace(/\,/g,'');
      var priceSell =  $("#priceSell").val();
      var priceParsing = priceSell.replace(/\./g, '');
      //console.log(priceParsing);
      var fix = 0;

       if (amountBTC >= 0.0001 && amountBTC <=1000000) {
          var totalBersih = parseFloat(amountBTC) * parseFloat(priceParsing);
          var fix = totalBersih;
        //  console.log(fix);
      }
      $('#hasilJual').val(fix.toLocaleString() + " IDR");
      //$('#hasil').find('input').val("tes");
      //document.getElementById('hasil').value =fix.toLocaleString();
  }            


