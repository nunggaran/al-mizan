        .row
          .col-md-4
            .form-group.is-empty
              label for="IDR"  Amount IDR
              input#IDR.form-control.parsing onkeyup="calculateIDR(this.value)"  type="text" /
              span.material-input
          .col-md-4
            .form-group.is-empty
